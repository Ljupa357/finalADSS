@model  finalMVC.Context.tbl_Book

@{
    ViewBag.Title = "Book";
}

<style>
    .error {
        color: red
    }
</style>

@using (Html.BeginForm("AddBook", "Book", FormMethod.Post))
{
    <div class="container">
        <div class="form-group">
            @Html.HiddenFor(x => x.idBook)
            <label>Book Name</label>
            @Html.ValidationMessageFor(x => x.bookName, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.bookName, new { @class = "form-control" })


        </div>
        <div class="form-group">
            <label>Author</label>
            @Html.ValidationMessageFor(x => x.Author, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.Author, new { @class = "form-control" })


        </div>
        <div class="form-group">
            <label>Year</label>
            @Html.ValidationMessageFor(x => x.Year, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.Year, new { @class = "form-control" })


        </div>
        
        

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
            <button type="reset" class="btn btn-danger">Cancel</button>
        </div>
    </div>

}

