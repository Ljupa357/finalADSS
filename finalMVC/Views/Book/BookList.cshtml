@model List<finalMVC.Context.tbl_Book>

@{
    ViewBag.Title = "BookList";
}

<table class="table table-hover">
    <tr>
        <th>Book Name</th>
        <th>Author</th>
        <th>year</th>  
        <th>Action</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.bookName</td>
            <td>@item.Author</td>
            <td>@item.Year</td>
       
            <td>
                <a href="@Url.Action("Book",new { item.idBook,item.bookName,item.Author,item.Year})" class="btn btn-success">Edit</a>
                <a href=" @Url.Action("Delete",new { item.idBook})" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }

</table>


